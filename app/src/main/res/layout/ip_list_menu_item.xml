<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/ip_click_details"
        android:layout_width="315dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ikona_budynek_szara" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9px"
            android:layout_toRightOf="@id/imageView2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/ip_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10px"
                android:text="TextView"
                android:textColor="@color/ip_list_name"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/ip_list_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5px"
                android:text="Ośrodek kultury"
                android:textColor="@color/ip_list_type"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:text="ul. Świdnicka 35"
                android:textColor="@color/ip_list_type"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ip_list_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15px"
            android:layout_marginTop="40px"
            android:paddingTop="3dp"
            android:text="500m"
            android:textColor="@color/ip_list_dist"
            android:textSize="15dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_navigate"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/ip_click_details"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ikona_nawiguj" />

</RelativeLayout>