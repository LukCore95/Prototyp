<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="43px"
        android:layout_height="48px"
        android:layout_margin="32px"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ikona_budynek_szara" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20px"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imageView2">

        <TextView
            android:id="@+id/ip_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55px"
            android:layout_marginTop="10px"
            android:text="TextView"
            android:textSize="11dp"
            android:textColor="@color/ip_list_name"/>
        <TextView
            android:id="@+id/ip_list_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="55px"
            android:layout_marginTop="10px"
            android:text="OÅ›rodek kultury"
            android:textSize="10dp"
            android:textColor="@color/ip_list_type"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ip_list_dist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20px"
        android:layout_marginTop="40px"
        android:text="500m"
        android:textSize="15dp"
        android:textColor="@color/ip_list_dist"/>
</RelativeLayout>