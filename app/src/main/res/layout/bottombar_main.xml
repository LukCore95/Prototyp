<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/routePointsTitle"
    android:elevation="4dp"
    android:minHeight="50dp"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/bottombarlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ciekaweMiejsceIkona"
            android:layout_width="40px"
            android:layout_height="34px"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21px"
            android:src="@drawable/ikona_flaga" />

        <TextView
            android:id="@+id/textbottombar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@id/ciekaweMiejsceIkona"
            android:text="@string/ip_list_header"
            android:textColor="@color/ip_list_header"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/ip_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@color/alpha"
            android:src="@mipmap/ikona_ustawienia" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>